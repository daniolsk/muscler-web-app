generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    id        Int       @id @default(autoincrement())
    username  String    @unique
    password  String
    createdAt DateTime  @default(now())
    workouts  Workout[]
}

model Workout {
    id        Int        @id @default(autoincrement())
    name      String
    date      DateTime   @default(now())
    isActive  Boolean
    user      User       @relation(fields: [userId], references: [id])
    userId    Int
    exercises Exercise[]
    logs      Log[]

    @@index([userId])
}

model Exercise {
    id             Int     @id @default(autoincrement())
    name           String
    exerciseNumber Int
    workout        Workout @relation(fields: [workoutId], references: [id])
    workoutId      Int
    logs           Log[]

    @@index([workoutId])
}

model Log {
    id          Int      @id @default(autoincrement())
    weight      Float
    reps        Int
    setNumber   Int
    workout     Workout  @relation(fields: [workoutId], references: [id])
    workoutId   Int
    exercise    Exercise @relation(fields: [excerciseId], references: [id])
    excerciseId Int

    @@index([workoutId])
    @@index([excerciseId])
}
